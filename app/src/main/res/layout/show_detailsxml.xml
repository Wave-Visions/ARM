<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="103dp"
        android:weightSum="1"
        android:background="#e8f1f2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Patient details"
            android:textSize="41dp"
            android:id="@+id/textView4"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_blue_dark" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f6">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"><![CDATA[
                android:orientation="vertical">

                ]]></TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    android:orientation="vertical">

                    <TextView
                        android:text=" Doctor&apos;s  Name "
                        android:layout_marginTop="17dp"
                        android:id="@+id/textView12"
                        android:layout_column="3"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="17dp"
                        android:id="@+id/textView8"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/doc_txt1"
                        android:layout_column="7"
                        android:hint="Name"
                        android:layout_marginTop="17dp"
                        android:textSize="20dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text=" Patient&apos;s Name "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView14"
                        android:layout_column="3"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView13"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/patient_txt1"
                        android:layout_column="7"
                        android:hint="Name" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    android:orientation="vertical">

                    <TextView
                        android:text=" Age  "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView11"
                        android:layout_column="3"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView15"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/age_txt1"
                        android:layout_column="7" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    android:orientation="vertical">

                    <TextView
                        android:text=" History"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView10"
                        android:layout_column="3"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView16"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/history_txt1"
                        android:layout_column="7" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    android:orientation="vertical">

                    <TextView
                        android:text=" Remarks"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView9"
                        android:layout_column="3"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView17"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="7"
                        android:id="@+id/rem_txt1" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    android:orientation="vertical">

                    <TextView
                        android:text=" Extra field 1 "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView7"
                        android:layout_column="3"
                        android:textSize="20dp"
                        android:textIsSelectable="false" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView18"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ext_txt11"
                        android:layout_column="7" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    android:orientation="vertical">

                    <TextView
                        android:text=" Extra field 2 "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView6"
                        android:layout_column="3"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView19"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ext_txt21"
                        android:layout_column="7" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text=" Extra field 3 "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView5"
                        android:layout_column="3"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView20"
                        android:layout_column="4"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ext_txt31"
                        android:layout_column="7" />
                </TableRow>
            </TableLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:text="Back"
                android:id="@+id/button_back"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

