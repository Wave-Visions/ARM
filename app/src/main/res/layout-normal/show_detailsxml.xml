<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_back1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:text=" Doctor&apos;s  Name "
                        android:layout_marginTop="17dp"
                        android:id="@+id/doctor_name"
                        android:layout_column="1"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="17dp"
                        android:id="@+id/textView8"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/doc_txt"
                        android:layout_column="3"
                        android:layout_marginTop="17dp"
                        android:textSize="20dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text=" Patient&apos;s Name "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView14"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView13"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/patient_txt"
                        android:layout_column="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text=" Age  "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView11"
                        android:layout_column="1"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView15"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/age_txt"
                        android:inputType="number"
                        android:layout_column="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text=" History"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView10"
                        android:layout_column="1"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView16"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/history_txt"
                        android:layout_column="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text=" Remarks"
                        android:layout_marginTop="7dp"
                        android:id="@+id/remark_text"
                        android:layout_column="1"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView17"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:id="@+id/rem_txt" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text=" Extra field 1 "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView7"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="false" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView18"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ext_txt1"
                        android:layout_column="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text=" Extra field 2 "
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView6"
                        android:textSize="20dp"
                        android:layout_column="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginTop="7dp"
                        android:id="@+id/textView19"
                        android:layout_column="2"
                        android:textSize="25dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ext_txt2"
                        android:layout_column="3" />
                </TableRow>

            </TableLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="10">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:textStyle="bold"
            android:id="@+id/button_submit"
            android:background="@drawable/btn"
            android:layout_gravity="bottom"
            android:elevation="50dp"/>

    </LinearLayout>


</LinearLayout>
